#!/usr/bin/env bash
# Changes localhost to 127.0.0.2 and facebook.com to 8.8.8.8 in /etc/hosts

# Backup the original hosts file
cp /etc/hosts /etc/hosts.bak

# Remove existing localhost and facebook.com entries
grep -v -E 'localhost|facebook\.com' /etc/hosts > /tmp/hosts.tmp

# Add the required entries
echo "127.0.0.2	localhost" >> /tmp/hosts.tmp
echo "8.8.8.8	facebook.com" >> /tmp/hosts.tmp

# Overwrite the hosts file
cat /tmp/hosts.tmp > /etc/hosts
rm /tmp/hosts.tmp
